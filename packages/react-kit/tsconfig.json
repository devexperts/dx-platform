{
  "extends": "../../node_modules/@devexperts/tools/settings/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "lib": [
      "es2016",
      "dom",
      "es2017.object",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ]
  },
  "include": [
    "typings/**/*",
    "src/**/*"
  ],
  "exclude": [
    "**/__tests__/*"
  ],
  "typedocOptions": {
    "mode": "file",
    "ignoreCompilerErrors": "true",
    "disableOutputCheck": "false",
    "excludeNotExported": "true",
    "excludePrivate": "true",
    "excludeProtected": "true",
    "hideGenerator": "true",
    "theme": "default",
    "out": "./docs",
    "name": "docs"
  }
}
