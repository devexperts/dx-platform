$duration = 200;

.init {
    max-height: 0;
    transition: max-height ($duration)ms linear;
}
.appearActive,
.enterActive {
    max-height: 100%;
}
.enterDone {
    max-height: 100%;
}

.exit {
    max-height: 100%;
}
.exitActive {
    max-height: 0;
}
.exitDone {
    max-height: 0;
}

:export {
    duration: $duration;
}