@require './Popover.mixin.styl';

.toggleButton {
	margin: 200px 300px;

	@media print {
		margin 100px;
	}
}

.label {
	display: block;
	margin-top: 20px;
	margin-bottom: 5px;
}

.heavy {
	height: 150px;
	position: relative
}

.controls {
	display: flex;
}

.popoverControls {
	padding-right: 20px;
}

.scrollable {
    width: 100%;
   	height 300px;
}

.wrapper {
	display: flex;
	height: 500px;
}

.wrapperLeft {
	justify-content: flex-start;
}

.wrapperCenter {
	justify-content: center;
}

.wrapperRight {
	justify-content: flex-end;
}

.wrapperTop {
	align-items: flex-start;
}

.wrapperMiddle {
	align-items: center;
}

.wrapperBottom {
	align-items: flex-end;
}