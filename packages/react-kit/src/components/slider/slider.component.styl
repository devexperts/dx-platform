.container {
	position: relative;
}

.handleContainer {
	position: absolute;
}

.handler {
	display: block;
}

.track {
	position: absolute;
	left: 0;
	pointer-events: none;
}

.rail {
	width: 100%;
	margin: 0 auto;
}

.ticks {
	position: relative;
}

.tick {
	position: absolute;
}

.tickValue {
	display: inline-block;
	position: relative;
}
