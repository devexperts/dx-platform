{
  "compilerOptions": {
    "module": "commonjs",
    "importHelpers": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "declaration": true,
    "pretty": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "strict": true,
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2015.symbol",
      "es2017.object",
      "es2016.array.include"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
